<body>

	<div class="wrapper">
		<div class="inner">
			<form method="post">
				<h3>OneMusic Giriş Formu</h3>

				<div class="form-wrapper">
					<label for="" class="label-input">Kullanıcı Adınız</label>
					<input type="text" class="form-control" asp-for="UserName">
				</div>
				<div class="form-wrapper">
					<label for="" class="label-input">Şifreniz</label>
					<input type="password" class="form-control" asp-for="Password">
				</div>

				<div style="color:red">
					@Html.ValidationSummary()
				</div>

				<button>Giriş Yap</button>
			</form>
			<div class="image-holder">
				<img src="https://cdn0.weddingwire.in/vendor/3007/3_2/640/jpg/rock-music-event1_15_163007-163973098155561.jpeg" alt="" style="width:530px; height:460px">
			</div>
		</div>
	</div>

	<script src="~/colorlib-regform-21/js/jquery-3.3.1.min.js"></script>
