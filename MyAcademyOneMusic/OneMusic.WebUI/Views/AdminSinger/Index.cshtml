@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
 
}

<h3>Sanatçılar</h3>
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Şarkıcı Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="/images/@item.ImageUrl" style="height:50px; width:50px" /></td>
            <td>@item.Name @item.Surname</td>
            <td>
                <button class="btn btn-outline-danger" onclick="deleteSinger()">Sil</button>
                <a class="btn btn-outline-info" asp-action="UpdateSinger" asp-route-id="">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-outline-success" asp-action="CreateSinger">Yeni Sanatçı Oluştur</a>


<script>
    function deleteSinger(id){
         Swal.fire({
             title: "Silmek İstediğinize Emin misiniz?",
             text: "Bu işlemi geri alamazsınız!",
             icon: "warning",
             showCancelButton: true,
             confirmButtonColor: "#3085d6",
             cancelButtonColor: "#d33",
             confirmButtonText: "Evet, Sil!",
             cancelButtonText: "İptal"
         }).then((result) => {
             if (result.isConfirmed) {

                     window.location.href = "/AdminSinger/DeleteSinger/" + id;
             }
         });
    }
</script>